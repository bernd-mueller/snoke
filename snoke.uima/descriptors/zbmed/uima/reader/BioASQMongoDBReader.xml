<!-- A simple collection reader that reads text files from a directory in the
     filesystem.  The Java class for this collection reader is in uima_core.jar. -->

<collectionReaderDescription  xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <implementationName>de.zbmed.snoke.uima.reader.BioASQMongoDBReader</implementationName>
    <processingResourceMetaData>
        <name>BioASQ Mongo Reader</name>
        <description>Reads files from the MongoDB</description>
        <version>1.0</version>
        <vendor>The Apache Software Foundation</vendor>
        <configurationParameters>
         <configurationParameter>
                <name>SrcField</name>
                <description>Textfield in liv</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
 			<configurationParameter>
              	<name>Language</name>
              	<description>Language of the document</description>
             	 <type>String</type>
             	 <multiValued>false</multiValued>
              <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>MongoServer</name>
                <description>Mongo Server Address</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>MongoPort</name>
                <description>Mongo Server Port</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>MongoDB</name>
                <description>Mongo Database Name</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>MongoCollection</name>
                <description>Mongo Collection Name</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>StartYear</name>
                <description>Starting Year</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>MaxDoc</name>
                <description>Maximum Number of Documents processed</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
        </configurationParameters>
		<configurationParameterSettings>
			<nameValuePair>
		        <name>SrcField</name>
		        <value>
	            	<string>liv@orig_data@TITLE</string>
		        </value>
		    </nameValuePair>
		     <nameValuePair>
                      <name>Language</name>
                      <value>
                        <string>liv.orig_data.LANGUAGE</string>
                      </value>
            </nameValuePair>	    
		    <nameValuePair>
		        <name>MongoServer</name>
		        <value>
		            <string>10.0.4.174</string>
		        </value>
		    </nameValuePair>
		    <nameValuePair>
		        <name>MongoPort</name>
		        <value>
		            <string>27017</string>
		        </value>
		    </nameValuePair>
		    <nameValuePair>
		        <name>MongoDB</name>
		        <value>
		            <string>livivo</string>
		        </value>
		    </nameValuePair>
		    <nameValuePair>
		        <name>MongoCollection</name>
		        <value>
		            <string>livivodata</string>
		        </value>
		    </nameValuePair>
		    <nameValuePair>
		        <name>StartYear</name>
		        <value>
		            <string>2015</string>
		        </value>
		    </nameValuePair>
		    <nameValuePair>
		        <name>MaxDoc</name>
		        <value>
		            <string>100</string>
		        </value>
		    </nameValuePair>
		</configurationParameterSettings>

        <!-- Type System of CASes returned by this Collection Reader -->

        <typeSystemDescription>
          <imports>
            <import name="org.apache.uima.examples.SourceDocumentInformation"/>
          </imports>
        </typeSystemDescription>
        <capabilities>
          	<capability>
          		<inputs/>
          		<outputs>
          			<type allAnnotatorFeatures="true">org.apache.uima.examples.SourceDocumentInformation</type>
          		</outputs>
          		<outputSofas>
      				<sofaName>liv.orig_data.TITLE</sofaName>
      				<sofaName>liv.orig_data.SUBTITLE</sofaName>
      				<sofaName>liv.orig_data.ABSTRACT</sofaName>
    			</outputSofas>
          	</capability>
        </capabilities>
		<operationalProperties>
			<modifiesCas>true</modifiesCas>
			<multipleDeploymentAllowed>false</multipleDeploymentAllowed>
			<outputsNewCASes>true</outputsNewCASes>
		</operationalProperties>		
    </processingResourceMetaData>
</collectionReaderDescription>
