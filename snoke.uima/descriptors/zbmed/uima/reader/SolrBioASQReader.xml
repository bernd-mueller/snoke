<!-- A simple collection reader that reads text files from a directory in the
     filesystem.  The Java class for this collection reader is in uima_core.jar. -->

<collectionReaderDescription  xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <implementationName>de.zbmed.snoke.uima.reader.SolrBioASQReader</implementationName>
    <processingResourceMetaData>
        <name>Solr BioASQ Reader</name>
        <description>Reads files from the BioASQ Solr</description>
        <version>1.0</version>
        <vendor>The Apache Software Foundation</vendor>
        <configurationParameters>
            <configurationParameter>
                <name>SolrCore</name>
                <description>Solr Core Web Address</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>SolrQuery</name>
                <description>Solr Query</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
        </configurationParameters>
		<configurationParameterSettings>
		    <nameValuePair>
		        <name>SolrCore</name>
		        <value>
		            <string>http://localhost:8888/solr/#/~cores/BioASQ2020</string>
		        </value>
		    </nameValuePair>
		    <nameValuePair>
		        <name>SolrQuery</name>
		        <value>
		            <string>PubDate-Year:[2020]</string>
		        </value>
		    </nameValuePair>
		</configurationParameterSettings>

        <!-- Type System of CASes returned by this Collection Reader -->

        <typeSystemDescription>
          <imports>
            <import name="org.apache.uima.examples.SourceDocumentInformation"/>
          </imports>
        </typeSystemDescription>

        <capabilities>
          	<capability>
          		<inputs/>
          		<outputs>
          			<type allAnnotatorFeatures="true">org.apache.uima.examples.SourceDocumentInformation</type>
          		</outputs>
          	</capability>
        </capabilities>
		<operationalProperties>
			<modifiesCas>true</modifiesCas>
			<multipleDeploymentAllowed>false</multipleDeploymentAllowed>
			<outputsNewCASes>true</outputsNewCASes>
		</operationalProperties>		
    </processingResourceMetaData>
</collectionReaderDescription>
